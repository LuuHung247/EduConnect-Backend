# Flask
FLASK_APP=app
FLASK_ENV=development

# Cognito Configuration
AWS_REGION=ap-southeast-1
COGNITO_USER_POOL_ID=your_pool_id_here
COGNITO_APP_CLIENT_ID=your_client_id_here

# JWT Configuration
JWKS_CACHE_TTL=3600
# Set to false in production
ALLOW_INSECURE_JWT=false

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_NAME=paas_backend

# Microservices Configuration
USER_SERVICE_URL=http://localhost:5002
MEDIA_SERVICE_URL=http://localhost:8001

# For Docker Compose (use service names)
# USER_SERVICE_URL=http://user-service:5002
# MEDIA_SERVICE_URL=http://media-service:8001

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_S3_BUCKET=your_bucket_name_here

# AWS SNS Configuration
AWS_SNS_TOPIC_ARN=your_sns_topic_arn_here

# Optional: Override JWKS URL
# COGNITO_JWKS_URL=https://your-custom-jwks-url/.well-known/jwks.json